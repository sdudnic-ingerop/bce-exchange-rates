{
	"info": {
		"_postman_id": "bce-rates-collection",
		"name": "ECB Exchange Rates",
		"description": "Collection d'exemples pour récupérer les taux de change de la Banque Centrale Européenne (BCE).",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Taux Mensuels Moyens (Monthly Average)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "https://data-api.ecb.europa.eu/service/data/EXR/M.{{CURRENCY}}.EUR.SP00.A?format=csvdata",
					"protocol": "https",
					"host": [
						"data-api",
						"ecb",
						"europa",
						"eu"
					],
					"path": [
						"service",
						"data",
						"EXR",
						"M.{{CURRENCY}}.EUR.SP00.A"
					],
					"query": [
						{
							"key": "format",
							"value": "csvdata",
							"description": "Format de réponse CSV"
						},
						{
							"key": "startPeriod",
							"value": "2023-01",
							"description": "Filtre optionnel de début",
							"disabled": true
						}
					]
				},
				"description": "Récupère l'historique mensuel des taux de change pour la devise spécifiée.\n\nClé: `M.{{CURRENCY}}.EUR.SP00.A`\n- M: Mensuel\n- {{CURRENCY}}: Devise cible\n- EUR: Euro (base)\n- SP00: Spot\n- A: Average (Moyenne)"
			},
			"response": []
		},
		{
			"name": "2. Taux Journaliers (Daily)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "https://data-api.ecb.europa.eu/service/data/EXR/D.{{CURRENCY}}.EUR.SP00.A?format=csvdata&startPeriod=2024-01-01",
					"protocol": "https",
					"host": [
						"data-api",
						"ecb",
						"europa",
						"eu"
					],
					"path": [
						"service",
						"data",
						"EXR",
						"D.{{CURRENCY}}.EUR.SP00.A"
					],
					"query": [
						{
							"key": "format",
							"value": "csvdata"
						},
						{
							"key": "startPeriod",
							"value": "2024-01-01",
							"description": "Date de début (AAAA-MM-JJ)"
						},
						{
							"key": "endPeriod",
							"value": "",
							"description": "Date de fin (optionnel)",
							"disabled": true
						}
					]
				},
				"description": "Récupère les taux journaliers.\n\nClé: `D.{{CURRENCY}}.EUR.SP00.A`\n- D: Daily (Quotidien)"
			},
			"response": []
		},
		{
			"name": "3. Toutes les devises (Wildcard)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "https://data-api.ecb.europa.eu/service/data/EXR/M..EUR.SP00.A?format=csvdata&startPeriod=2024-01",
					"protocol": "https",
					"host": [
						"data-api",
						"ecb",
						"europa",
						"eu"
					],
					"path": [
						"service",
						"data",
						"EXR",
						"M..EUR.SP00.A"
					],
					"query": [
						{
							"key": "format",
							"value": "csvdata"
						},
						{
							"key": "startPeriod",
							"value": "2024-01",
							"description": "Pour ne pas récupérer tout l'historique"
						}
					]
				},
				"description": "Récupère les taux de TOUTES les devises disponibles par rapport à l'Euro.\nNotez le double point `..` dans le chemin qui agit comme un joker pour la devise."
			},
			"response": []
		},
		{
			"name": "4. Format JSON (SDMX-JSON)",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/vnd.sdmx.data+json;version=1.0.0-wd",
						"type": "text"
					}
				],
				"url": {
					"raw": "https://data-api.ecb.europa.eu/service/data/EXR/M.{{CURRENCY}}.EUR.SP00.A",
					"protocol": "https",
					"host": [
						"data-api",
						"ecb",
						"europa",
						"eu"
					],
					"path": [
						"service",
						"data",
						"EXR",
						"M.{{CURRENCY}}.EUR.SP00.A"
					]
				},
				"description": "Exemple de récupération au format JSON (SDMX-JSON) au lieu de CSV. \nNécessite le header `Accept` spécifique."
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "CURRENCY",
			"value": "USD",
			"type": "string",
			"description": "Code devise (ex: USD, GBP, JPY, CHF)"
		}
	]
}
